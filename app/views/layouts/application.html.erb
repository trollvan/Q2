<!DOCTYPE html>
<html>
  <head>
    <title>Q2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-light bg-light d-flex'>
      <%= link_to 'Itrach', root_path, class: 'navbar-brand' %>
      <% if user_signed_in? %>
        <%= link_to 'Sign out', destroy_user_session_path, class: 'ml-auto p-2' %>
      <% end %>
    </nav>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
